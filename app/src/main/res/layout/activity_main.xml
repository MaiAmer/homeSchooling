<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:columnCount="2"
    android:rowCount="2">

    <TextView
        android:id="@+id/main_discover_skills"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_rowWeight="1"
        android:background="@drawable/rectangle"
        android:elevation="2dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="discover Skills"
        android:textColor="#db3340" />


    <TextView
        android:id="@+id/main_current_skills"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_rowWeight="1"
        android:background="@drawable/rectangle"
        android:elevation="4dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Current Skills"
        android:textColor="#db3340" />

    <TextView
        android:id="@+id/main_about_app"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_rowWeight="1"
        android:background="@drawable/rectangle"
        android:elevation="2dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="about the App"
        android:textColor="#db3340" />

    <TextView
        android:id="@+id/main_assessments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_rowWeight="1"
        android:background="@drawable/rectangle"
        android:elevation="2dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Assessments"
        android:textColor="#db3340" />

</GridLayout>
