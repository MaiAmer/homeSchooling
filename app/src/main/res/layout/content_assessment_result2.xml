<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/suggested_Skills_Card"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/suggestCard_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/image" />

            <TextView
                android:id="@+id/suggestCard_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/suggestCard_image"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="10dp"
                tools:text="title of skill"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/icons"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/suggestcard_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/suggestCard_image"
                android:layout_margin="20dp"
                tools:text="description for skill"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/primary_text"
                android:textSize="20sp" />

            <Button
                android:id="@+id/go_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/suggestcard_text"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/primary_text"
                android:text=" GO "
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>